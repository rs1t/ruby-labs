$('.img-right-side').click(function (event) {
    event.stopImmediatePropagation();

    $.ajax({
        type: "get",
        url: "api/next_image",
        data: {
            index: imageCurrentIndex,
            theme_id: selectedThemeId,
            length: themeImagesSize
        },
        dataType: 'json'
    }).done(function (data_return) {
        imageCurrentIndex = data_return.new_image_index;
        oneImageName = data_return.name;
        oneImageFile = data_return.file;
        oneImageId = data_return.image_id;
        $('.image_display h2.up').append().html(oneImageName);
        $(".img-center").attr({title: "Selected image"});
        $(".img-center img").attr({
            alt: "Selected Image", src:
            oneImageFile, title: "Selected image"
        });
        var userValuedFlag = data_return.user_valued;
        if (userValuedFlag  == 1) {
            $('.image .left_controls .rate_image').css({"display": "none"});
            $('.image .image_display .image_stats span.common_value').css({"display": "block"});
            var imageCommonValue = data_return.common_avg_value;
            $('.image .image_display .image_stats span.common_value h4.common').append().html(imageCommonValue);
            var imageValue = data_return.value;
            $('.image .image_display .image_stats span.user_value').css({"display": "block"});
            $('.image .image_display .image_stats span.user_value h4.user').append().html(imageValue);
        } else {
            $('.image .image_display .image_stats span.common_value').css({"display": "none"});
            $('.image .image_display .image_stats span.user_value').css({"display": "none"});
            $('.image .left_controls .rate_image').css({"display": "block"});
        }
    }).fail(function (data_return) {
        console.log("error: data_return = " + data_return);
    });
});


