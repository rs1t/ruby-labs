var imageData = '<%= raw @image_data %>';
var valuesQty = '<%= @image_data[:values_qty] %>';
$('.left_controls span.total_values h2.total').append().html(valuesQty);

// show theme
var selectedTheme = '<%= @image_data[:theme] %>';
if (selectedTheme == "Выберите тему для оценки" ||
    selectedTheme == "Select theme to leave your answer" ||
    selectedTheme == "") {
    $('.img-left-side').css({"display": "none"});
    $('.img-right-side').css({"display": "none"});
    $('.image .left_controls .rate_image').css({"display": "none"});
    $('.up').css({"visibility": "hidden"});
} else {
    $('.img-left-side').css({"display": "block"});
    $('.img-right-side').css({"display": "block"});
    $('.image .left_controls .rate_image').css({"display": "block"});
    $('.up').css({"visibility": "visible"});
}

var userValuedImage = '<%= @image_data[:user_valued] %>';
if (userValuedImage == 1) {
    $('.image .image_display .image_stats span.common_value').css({"display": "block"});
    $('.image .left_controls .rate_image').css({"display": "none"});
    var imageCommonValue = '<%= @image_data[:common_avg_value] %>';
    $('.image .image_display .image_stats span.common_value h4.common').append().html(imageCommonValue);
    var imageValue = '<%= @image_data[:value] %>';
    $('.image .image_display .image_stats span.user_value').css({"display": "block"});
    $('.image .image_display .image_stats span.user_value h4.user').append().html(imageValue)
} else {
    $('.image .image_display .image_stats span.common_value').css({"display": "none"});
    $('.image .image_display .image_stats span.user_value').css({"display": "none"});
}

$('.image_display h2.up-theme').append().html(selectedTheme);

//restore button
$('.select_theme').empty().html("<%= j render 'work/button_theme_select' -%>");

// get data from controller
var imageCurrentIndex = '<%= @image_data[:index] %>';
